\section*{Families}
\addcontentsline{toc}{section}{Families}
\label{sec:Families}

<% @families.each do |family| %>
\subsection*{<%= family %>}

<% family.people.each_slice(4) do |slice| %>
\begin{figure}[H]
<% slice.each do |person| %>
    \begin{minipage}[b]{0.2\linewidth}
        \centering
        \includegraphics[width=\textwidth]{img<%= person.portrait.path(:large) %>}
        <%= person.full_name %>
    \end{minipage}
    \hspace{0.5cm}
<% end %>
\end{figure}
<% end %>

<% end %>
